<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skin_player_bg_login"
    tools:context="com.cakes.musicplayer.ui.activities.PlayDetailsActivity">

    <ImageView
        android:id="@+id/image_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/icon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--    views about name amd author on top -->
    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="music name" />

    <TextView
        android:id="@+id/text_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        tools:text="music author" />
    <!--    views about name amd author on top -->

    <!--    views about playButton, preButton, nextButton start -->
    <ImageView
        android:id="@+id/activity_playing_image_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_media_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/activity_playing_image_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_media_next"
        app:layout_constraintBottom_toBottomOf="@+id/activity_playing_image_play"
        app:layout_constraintEnd_toStartOf="@+id/activity_playing_image_play"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/activity_playing_image_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_media_next"
        app:layout_constraintBottom_toBottomOf="@+id/activity_playing_image_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@id/activity_playing_image_play" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_menu_moreoverflow"
        app:layout_constraintBottom_toBottomOf="@+id/activity_playing_image_play"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:src="@drawable/icon_menu"
        app:layout_constraintBottom_toBottomOf="@+id/activity_playing_image_play"
        app:layout_constraintEnd_toEndOf="parent" />
    <!--    views about playButton, preButton, nextButton end -->

    <!--    views about Seekbar start -->
    <SeekBar
        android:id="@+id/activity_playing_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/activity_playing_image_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@id/activity_playing_seekbar"
        app:layout_constraintEnd_toStartOf="@id/activity_playing_seekbar"
        app:layout_constraintTop_toTopOf="@id/activity_playing_seekbar"
        tools:text="00:00" />

    <ImageView
        android:id="@+id/image_rings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_menu_rings"
        app:layout_constraintBottom_toBottomOf="@id/activity_playing_seekbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/activity_playing_seekbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/activity_playing_seekbar"
        app:layout_constraintStart_toEndOf="@id/activity_playing_seekbar"
        app:layout_constraintTop_toTopOf="@id/activity_playing_seekbar"
        tools:text="06:00" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="倍速"
        app:layout_constraintBottom_toBottomOf="@id/activity_playing_seekbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/activity_playing_seekbar" />
    <!--    views about Seekbar end -->

    <!--    views about download start -->
    <TextView
        android:id="@+id/text_like"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="收藏"
        app:layout_constraintBottom_toTopOf="@+id/activity_playing_seekbar"
        app:layout_constraintEnd_toStartOf="@id/text_videos"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_videos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="视频"
        app:layout_constraintBottom_toBottomOf="@+id/text_like"
        app:layout_constraintEnd_toStartOf="@id/text_download"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/text_like"
        app:layout_constraintTop_toTopOf="@+id/text_like" />

    <TextView
        android:id="@+id/text_download"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="下载"
        app:layout_constraintBottom_toBottomOf="@+id/text_videos"
        app:layout_constraintEnd_toStartOf="@id/text_comments"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/text_videos"
        app:layout_constraintTop_toTopOf="@+id/text_videos" />

    <TextView
        android:id="@+id/text_comments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="评论"
        app:layout_constraintBottom_toBottomOf="@+id/text_download"
        app:layout_constraintEnd_toStartOf="@id/text_more"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/text_download"
        app:layout_constraintTop_toTopOf="@+id/text_download" />

    <TextView
        android:id="@+id/text_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="更多"
        app:layout_constraintBottom_toBottomOf="@+id/text_comments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/text_comments"
        app:layout_constraintTop_toTopOf="@+id/text_comments" />
    <!--    views about download end -->

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/text_download"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_author"
        tools:text="歌词：AAAAAAAAAAAAAAAAAAAAA\n歌词：BBBBBBBBBBBBBBBB\n歌词：CCCCCCCCCCCCCCC" />
</androidx.constraintlayout.widget.ConstraintLayout>
