<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.actvities.NewVersionStartActivity">

    <ImageSwitcher
        android:id="@+id/newVersionStartAct_imageSwitcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ImageSwitcher>

    <TextView
        android:id="@+id/newVersionStartAct_text_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/bg_skip"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:paddingVertical="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/text_skip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/newVersionStartAct_text_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="80dp"
        android:clickable="true"
        android:visibility="invisible"
        android:text="@string/enter_app"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/newVersionStartAct_imageSwitcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/newVersionStartAct_image_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:src="@drawable/btn_radio_on_holo_light" />

        <ImageView
            android:id="@+id/newVersionStartAct_image_02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:src="@drawable/btn_radio_off_holo_light" />

        <ImageView
            android:id="@+id/newVersionStartAct_image_03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:src="@drawable/btn_radio_off_holo_light" />

        <ImageView
            android:id="@+id/newVersionStartAct_image_04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:src="@drawable/btn_radio_off_holo_light" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>