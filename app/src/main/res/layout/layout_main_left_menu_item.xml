<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/leftmenu_item_view_devide"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="10dp"
        android:background="#9462EC" />

    <RelativeLayout
        android:id="@+id/leftmenu_item_layout_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/leftmenu_item_iamge_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/leftmenu_item_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/leftmenu_item_iamge_left"
            android:text="哈哈哈哈" />

        <com.test.musicplayer.ui.views.MsgTipView
            android:id="@+id/leftmenu_item_tipView_left"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/leftmenu_item_layout_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/leftmenu_item_text_Sepplement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="new skin" />

            <ImageView
                android:id="@+id/leftmenu_item_iamge_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_launcher_foreground" />

            <com.test.musicplayer.ui.views.MsgTipView
                android:id="@+id/leftmenu_item_tipView_right"
                android:layout_width="10dp"
                android:layout_height="10dp" />
        </LinearLayout>

        <Switch
            android:id="@+id/leftmenu_item_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:visibility="gone" />

    </RelativeLayout>
</RelativeLayout>